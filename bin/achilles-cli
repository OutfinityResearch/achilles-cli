#!/bin/bash

# Get the directory of the script
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

# Detect optional flags
USE_FAST=0
if [[ "$1" == "-fast" ]]; then
  USE_FAST=1
  shift
fi

if [[ $USE_FAST -eq 1 ]]; then
  export ACHILLES_USE_FAST=1
else
  unset ACHILLES_USE_FAST
fi

# Run the achilles-planner, forwarding remaining arguments
node "$SCRIPT_DIR/../src/achilles-planner.js" "$@"
